<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewProgressBar"
        android:layout_width="match_parent"
        android:layout_height="164dp"
        app:cardBackgroundColor="@color/cardViewProgressBarBackground">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="20dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="20dp">


            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="25"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:secondaryProgress="100"
                android:id="@+id/progressBarDealing"
                android:background="@color/progressBarBackground"/>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25%"
                android:textColor="#9d3f3f"
                android:textSize="20sp"
                android:id="@+id/textViewDealingPercentage"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="85dp"
                android:paddingStart="18dp"
                android:text="Dealing"
                android:textSize="16sp"
                android:id="@+id/textViewDealing"
                />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="25"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:secondaryProgress="100"
                android:layout_marginStart="85dp"
                android:id="@+id/progressBarRespectTime"
                android:background="@color/progressBarBackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25%"
                android:textColor="#9d3f3f"
                android:textSize="20sp"
                android:id="@+id/textViewRespectTimePercentage"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="115dp"
                android:layout_marginTop="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="86dp"
                android:paddingStart="93dp"
                android:text="Respect Time"
                android:textSize="16sp"
                android:id="@+id/textViewRespectTime"
                />

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="25"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:secondaryProgress="100"
                android:layout_marginStart="175dp"
                android:id="@+id/progressBarAttendance"
                android:background="@color/progressBarBackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25%"
                android:textColor="#9d3f3f"
                android:textSize="20sp"
                android:id="@+id/textViewAttendancePercentage"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="205dp"
                android:layout_marginTop="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="86dp"
                android:paddingStart="185dp"
                android:text="Attendance"
                android:textSize="16sp"
                android:id="@+id/textViewAttendance"
                />


            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:indeterminate="false"
                android:max="100"
                android:progress="25"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:secondaryProgress="100"
                android:layout_marginStart="260dp"
                android:id="@+id/progressBarEfficiency"
                android:background="@color/progressBarBackground"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25%"
                android:textColor="#9d3f3f"
                android:textSize="20sp"
                android:id="@+id/textViewEfficiencyPercentage"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="290dp"
                android:layout_marginTop="36dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="86dp"
                android:paddingStart="275dp"
                android:text="Efficiency"
                android:textSize="16sp"
                android:id="@+id/textViewEfficiency"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />




        </RelativeLayout>



    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cardViewReviews"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            >


            <RatingBar
                android:id="@+id/ratingBarReviews"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:rating="3.5"
                android:progressBackgroundTint="@android:color/darker_gray"
                android:progressTint="@color/colorPrimary"
                android:secondaryProgressTint="@color/colorPrimary"
                android:paddingTop="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewCommentDate"
                android:text="12/7/2018"
                android:paddingTop="10dp"
                android:paddingLeft="10dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="30dp"
            android:paddingStart="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewTrainerName"
                android:textColor="@android:color/black"
                android:text="Trainee name"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textViewComments"
                android:text="No comments"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                />

        </LinearLayout>




    </android.support.v7.widget.CardView>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/viewHorizontalLineReviews"
        android:background="#dfdbdb"
        />


</LinearLayout>