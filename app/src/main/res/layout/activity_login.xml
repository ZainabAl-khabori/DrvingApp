<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="worldontheotherside.wordpress.com.drvingapp.LoginActivity">


    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/imageViewLogo"
        android:contentDescription="@string/contentDescriptionLogo"
        android:background="@drawable/ic_logo"
        android:layout_marginTop="90dp"
        android:layout_gravity="center_horizontal"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frameLayoutPlaceholder"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal">

    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal">

        <Button
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:text="@string/Login"
            android:id="@+id/buttonLogin"
            android:layout_marginTop="30dp"
            android:textColor="#fef4f4"
            android:background="#9D3F3F"
            android:onClick="loginAction"/>

        <Button
            android:id="@+id/buttonVerify"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:layout_marginTop="30dp"
            android:background="#9D3F3F"
            android:onClick="verifyAction"
            android:text="@string/Login"
            android:textColor="#fef4f4"
            android:visibility="gone" />
    </LinearLayout>



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/CreateAccountSignUp"
        android:id="@+id/textViewCreateAccountSignup"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:onClick="goSignUpAction"/>


</LinearLayout>
