<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardViewMyInstructors"
    android:layout_margin="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="20dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/instructor_s_name"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/textViewInstructorName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:maxLines="2"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textColor="@android:color/black"
                    android:textSize="14dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewDrumsTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/drums_test"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/imageViewDrumsTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tint="@android:color/holo_green_light"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_done" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewSlopeTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/slope_test"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/imageViewSlopeTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tint="@android:color/holo_green_light"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_done" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textViewRoadTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_horizontal"
                    android:text="@string/road_test"
                    android:textColor="@color/colorPrimary"
                    android:textSize="14dp" />

                <ImageView
                    android:id="@+id/imageViewRoadTest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:tint="@android:color/holo_green_light"
                    android:visibility="invisible"
                    app:srcCompat="@drawable/ic_done" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:id="@+id/linearLayoutInfo">

                <ImageView
                    android:id="@+id/imageViewInfo"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:tint="@color/tabIndicatorColor"
                    app:srcCompat="@drawable/ic_info" />

                <TextView
                    android:id="@+id/textViewContractInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Contract info"
                    android:textAlignment="center"
                    android:textColor="@color/tabIndicatorColor" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutRate"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/imageViewRate"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:scaleType="fitCenter"
                    android:tint="@android:color/holo_red_light"
                    app:srcCompat="@drawable/ic_rate" />

                <TextView
                    android:id="@+id/textViewRate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Rate"
                    android:textAlignment="center"
                    android:textColor="@android:color/holo_red_light" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>