<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="worldontheotherside.wordpress.com.drvingapp.EditingTrainerProfileActivity">


    <LinearLayout
        android:id="@+id/linearLayoutProfileHeader"
        android:layout_width="match_parent"
        android:layout_height="156dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:maxHeight="100dp"
        android:maxWidth="100dp"
        android:layout_gravity="center"
        android:src="@drawable/edit_profile_picture"
        android:id="@+id/circleImageViewProfile"/>

    <EditText
        android:id="@+id/editTextProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:paddingTop="10dp"
        android:hint="Edit Name"
        android:drawableEnd="@android:drawable/ic_menu_edit"
        android:layout_gravity="center" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/linearLayoutTrainingRegion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:layout_below="@+id/linearLayoutProfileHeader"
        >

        <TextView
            android:text="Training Region"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staticTextViewTrainingRegion"
            android:textSize="16sp"
            android:layout_weight="1"
            />

        <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.1"
            app:hintText="Select Training Region"
            android:id="@+id/spinnerTrainingRegion" />



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/viewHorizontalLine1"
        android:background="#dfdbdb"
        android:layout_below="@+id/linearLayoutTrainingRegion"
        />


    <LinearLayout
        android:id="@+id/linearLayoutLanguage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:layout_below="@+id/linearLayoutTrainingRegion"
        >

        <TextView
            android:text="Language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staticTextViewLanguage"
            android:textSize="16sp"
            android:layout_weight="1"
            />

        <com.androidbuts.multispinnerfilter.MultiSpinnerSearch
            android:id="@+id/spinnerLanguage"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            app:hintText="Select Language"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/viewHorizontalLine2"
        android:background="#dfdbdb"
        android:layout_below="@+id/linearLayoutLanguage"
        />


    <LinearLayout
        android:id="@+id/linearLayoutVehicleType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:layout_below="@+id/linearLayoutLanguage"
        >

        <TextView
            android:text="Vehicle Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staticTextViewVehicleType"
            android:textSize="16sp"
            android:layout_weight="1"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:id="@+id/spinnerVehicleType"/>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/viewHorizontalLine3"
        android:background="#dfdbdb"
        android:layout_below="@+id/linearLayoutVehicleType"
        />




    <LinearLayout
        android:id="@+id/linearLayoutContractType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingBottom="5dp"
        android:paddingStart="15dp"
        android:paddingEnd="10dp"
        android:layout_below="@+id/linearLayoutVehicleType"
        >

        <TextView
            android:text="Contract Type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staticTextViewContractType"
            android:textSize="16sp"
            android:layout_weight="1"
            />

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.2"
            android:id="@+id/spinnerContractType"/>



    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdbdb"
        android:layout_below="@+id/linearLayoutContractType"
        />


    <LinearLayout
        android:id="@+id/linearLayoutTrainingTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutContractType"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        >

        <TextView
            android:text="Training Time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staticTextViewTrainingTime"
            android:textSize="16sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_weight="1"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="25dp"
            android:text="SET"
            android:textAlignment="center"
            android:textColor="#fef4f4"
            android:background="#9D3F3F"
            android:layout_weight="1"
            android:onClick="setTrainingTime"
            />

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdbdb"
        android:layout_below="@id/linearLayoutTrainingTime"
        />

    <LinearLayout
        android:id="@+id/linearLayoutAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutTrainingTime"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        >

        <TextView
            android:text="Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staticTextViewAge"
            android:textSize="16sp"
            android:layout_weight="1"
            />

        <EditText
            android:hint="age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextAge"
            android:textSize="16sp"
            android:inputType="number"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/viewHorizontalLine4"
        android:background="#dfdbdb"
        android:layout_below="@id/linearLayoutAge"
        />

    <LinearLayout
        android:id="@+id/linearLayoutVehiclePlate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutAge"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        >

        <TextView
            android:text="Vehicle Plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staticTextViewVehiclePlate"
            android:textSize="16sp"
            android:layout_weight="1"
            />

        <EditText
            android:hint="Vehicle Plate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextVehiclePlate"
            android:textSize="16sp"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdbdb"
        android:layout_below="@id/linearLayoutVehiclePlate"
        />

<LinearLayout
        android:id="@+id/linearLayoutPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutVehiclePlate"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        >

        <TextView
            android:text="Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staticTextViewPhone"
            android:textSize="16sp"
            android:layout_weight="1"
            />

        <EditText
            android:hint="Phone Number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextPhone"
            android:textSize="16sp"
            android:inputType="phone"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdbdb"
        android:layout_below="@id/linearLayoutPhone"
        />
<LinearLayout
        android:id="@+id/linearLayoutHourPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutPhone"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        >

        <TextView
            android:text="Hour Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staticTextViewHourPrice"
            android:textSize="16sp"
            android:layout_weight="1"
            />

        <EditText
            android:hint="Hour Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextHourPrice"
            android:textSize="16sp"
            android:inputType="number"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdbdb"
        android:layout_below="@id/linearLayoutHourPrice"
        />
<LinearLayout
        android:id="@+id/linearLayoutContractPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayoutHourPrice"
        android:orientation="horizontal"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        >

        <TextView
            android:text="Contract Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/staticTextViewContractPrice"
            android:textSize="16sp"
            android:layout_weight="1"
            />

        <EditText
            android:hint="Contract Price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editTextContractPrice"
            android:textSize="16sp"
            android:inputType="number"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dfdbdb"
        android:layout_below="@id/linearLayoutContractPrice"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:text="submit"
        android:id="@+id/buttonLogin"
        android:layout_alignTop="@+id/editTextPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:textColor="#fef4f4"
        android:background="#9D3F3F"
        android:onClick="submitAction"
        android:layout_below="@id/linearLayoutContractPrice"/>










</RelativeLayout>
